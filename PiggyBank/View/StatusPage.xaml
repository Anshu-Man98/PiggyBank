                            Property=Height,
                            Factor=0.51}"
                    RelativeLayout.WidthConstraint="{ConstraintExpression
                                       Type=RelativeToParent,
                                       Property=Width,
                                       Factor=1}">
                    <Label Text="Avaliable Balance" FontSize="20" FontAttributes="Bold" TextColor="#176bff"
                       HorizontalTextAlignment="Start" Margin="15,0,0,0" />
                <Boxx:PancakeView BackgroundGradientStartPoint="1.2,0" BackgroundGradientEndPoint="0,1.5" RelativeLayout.WidthConstraint="{ConstraintExpression
                                       Type=RelativeToParent,
                                       Property=Width,
                                       Factor=2}"
                     HeightRequest="120"
                     
                       RelativeLayout.YConstraint="{ConstraintExpression
                            Type=RelativeToParent,
                            Property=Height,
                            Factor=10}"
                                 Margin="5,0,5,0"
                                 CornerRadius="20"
                     >
                     <Boxx:PancakeView.Shadow>
                        <Boxx:DropShadow Offset="0,3"/>

                    </Boxx:PancakeView.Shadow>
                    <Boxx:PancakeView.BackgroundGradientStops>
                        <Boxx:GradientStopCollection>
                            <Boxx:GradientStop Color="White" Offset="0"/>
                             <Boxx:GradientStop Color="#065BFF" Offset="0.7"/>
                        </Boxx:GradientStopCollection>
                    </Boxx:PancakeView.BackgroundGradientStops>
                    </Boxx:PancakeView>

            </StackLayout>

            <StackLayout
                   RelativeLayout.YConstraint="{ConstraintExpression
                            Type=RelativeToParent,
                            Property=Height,
                            Factor=0.75}"
