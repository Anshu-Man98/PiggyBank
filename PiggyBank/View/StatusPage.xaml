                                       Type=RelativeToParent,
                                       Property=Width,
                                       Factor=1}">
                    <Label Text="Split Bill" FontSize="20" FontAttributes="Bold" TextColor="#176bff"
                       HorizontalTextAlignment="Start" Margin="15,0,0,0" />
                <Boxx:PancakeView BackgroundGradientStartPoint="1,0.5" BackgroundGradientEndPoint="0,4"

                      RelativeLayout.WidthConstraint="{ConstraintExpression
                            Type=RelativeToParent,
                            Property=Width,
                            Factor=2}"
                     HeightRequest="120"
                       RelativeLayout.YConstraint="{ConstraintExpression
                            Type=RelativeToParent,
                            Property=Height,
                            Factor=10}"
                        Margin="5,0,5,0"
                        CornerRadius="20"
                     >

                    <Boxx:PancakeView.Shadow>
                        <Boxx:DropShadow Offset="0,3"/>

                    </Boxx:PancakeView.Shadow>
                    
                      <Boxx:PancakeView.BackgroundGradientStops>
                        <Boxx:GradientStopCollection>
                            <Boxx:GradientStop Color="#065BFF" Offset="0"/>
                             <Boxx:GradientStop Color="White" Offset="0.7"/>
                        </Boxx:GradientStopCollection>
                    </Boxx:PancakeView.BackgroundGradientStops>

                    </Boxx:PancakeView>

            </StackLayout>





            <RelativeLayout x:Name="mainn"  HorizontalOptions="CenterAndExpand" 


               RelativeLayout.WidthConstraint="{ConstraintExpression
                                       Type=RelativeToParent,
                                       Property=Width,
                                       Factor=1}"
                             RelativeLayout.HeightConstraint="{ConstraintExpression
                                       Type=RelativeToParent,
                                       Property=Height,
                                       Factor=1}">



                 <control:ProgressRing x:Name="progressringtop"
                                       RingProgressColor="#176bff"
                                       
                                       RingThickness="23"
                                       Progress="10"
                                       RingBaseColor="White"
                                       RelativeLayout.HeightConstraint="{ConstraintExpression
                                       Type=RelativeToParent,
                                       Property=Height,
                                       Factor=0.45}"
                                       RelativeLayout.WidthConstraint="{ConstraintExpression
                                       Type=RelativeToParent,
                                       Property=Height,
                                       Factor=0.45}"
                                  RelativeLayout.YConstraint="{ConstraintExpression
