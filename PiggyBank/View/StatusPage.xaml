                    <Label Text="avaliable balance of the month" HorizontalTextAlignment="Center"
                           FontSize="15" FontAttributes="Bold" TextColor="Black" Padding="30,0,30,0" Margin="0"/>

                </StackLayout>
           </RelativeLayout>

                    

                

            
